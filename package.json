{
	"name": "skimr",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "turbo run dev",
		"build": "turbo run build",
		"lint": "turbo run lint",
		"check-types": "turbo run check-types",
		"format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}\"",
		"fix": "turbo run fix",
		"prepare": "husky"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"devDependencies": {
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.6.2",
		"turbo": "^2.6.2"
	},
	"packageManager": "pnpm@10.27.0",
	"author": "AdityaP183",
	"license": "ISC",
	"engines": {
		"node": ">=20"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
			"pnpm dlx ultracite fix"
		]
	}
}
