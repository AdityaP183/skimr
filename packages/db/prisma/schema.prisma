generator client {
    provider = "prisma-client-js"
    output   = "../generated/client"
}

datasource db {
    provider     = "postgresql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

// Enums

enum Role {
  ADMIN
  CREATOR
}

enum Plan {
  FREE
  STARTER
  ULTIMATE
}

// Models
model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String   // or nullable if using OAuth
  role      Role     @default(CREATOR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  subscription Subscription?
  domains      Domain[]
  links        Link[]
}
