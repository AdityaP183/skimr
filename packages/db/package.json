{
    "name": "@skimr/db",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "exports": {
        ".": "./src/client.ts"
    },
    "scripts": {
        "build": "tsc",
        "clean": "git clean -xdf .cache .turbo dist node_modules",
        "dev": "tsc",
        "lint": "eslint . --max-warnings 0",
        "generate": "prisma generate",
        "migrate": "pnpm with-env prisma migrate dev",
        "push": "pnpm with-env prisma db push",
        "prebuild": "npm run generate",
        "predev": "npm run generate",
        "studio": "pnpm with-env prisma studio",
        "with-env": "dotenv -e ../../.env.local --"
    },
    "prettier": "@skimr/prettier-config",
    "devDependencies": {
        "@skimr/eslint-config": "workspace:*",
        "@skimr/prettier-config": "workspace:*",
        "@skimr/tsconfig": "workspace:*",
        "prisma": "^6.16.2"
    },
    "dependencies": {
        "@prisma/client": "latest",
        "@t3-oss/env-nextjs": "^0.13.8",
        "dotenv-cli": "^10.0.0"
    }
}
